@{
    ViewData["Title"] = "Home Page";
}

<form class="form-inline" method="post">
    <div class="form-group">
        <label class="form-control-plaintext">Adınız</label>
    </div>
    <div class="form-group ml-2">
        <input type="text" name="ad" class="form-control" required />
    </div>
    <button class="btn btn-primary ml-2">Gönder</button>
</form>

<div class="text-center">
    <h1 class="display-4">
        Welcome

        @if (!string.IsNullOrEmpty(@Context.Request.Cookies["ad"]))
        {
            @Context.Request.Cookies["ad"]
            <span class="small">
                <a asp-controller="Home" asp-action="Unut">(Beni Unut)</a>
            </span>
        }

    </h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
